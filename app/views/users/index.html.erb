<div class="container">
  <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-6 col-xs-offset-3">
    <h1>ユーザー</h1>
    <% @users.each do |user| %>
      <%= link_to user_path(user) do %>
        <p class="user-image"><%= profile_img(user) %></p>
        <p><%= user.name %></p>
      <% end %>
      <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), class: "btn btn-default", method: 'post' %>
      <p><%= render 'follow_form', user: user if signed_in? %></p>
    <% end %>
  </div>
</div>
